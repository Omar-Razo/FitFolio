<div class="columns">

  <div class="column is-one-third">
    <div class="login-card">
      <h3 class="page-title">Login</h3>
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">Email:</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">login</button>
        </div>
      </form>
    </div>
  </div>

  <div class="column is-one-third">
    <div class="login-card">
      <h3 class="page-title">Signup</h3>
      <form class="form signup-form">

        <div class="form-group">
          <label for="name-signup">Name:</label>
          <input class="form-input" type="text" id="name-signup" />
        </div>

        <div class="form-group">
          <label for="email-signup">Email:</label>
          <input class="form-input" type="email" id="email-signup" />
        </div>

        <div class="form-group">
          <label for="password-signup">Password:</label>
          <input class="form-input" type="password" id="password-signup" />
        </div>

        <div class="form-group">
          <label for="user-height">Height(in inches):</label>
          <input class="form-input" type="number" id="user-height" min="0"/>
        </div>

        <div class="form-group">
          <label for="user-weight">Weight(in pounds):</label>
          <input class="form-input" type="number" id="user-weight" min="0"/>
        </div>

        <div class="form-group">
          <label for="user-age">Age:</label>
          <input class="form-input" type="number" id="user-age" min="0"/>
        </div>

        <div class="form-group">
            <label for="user-gender">Gender:</label>
            <input class="form-input" list="user-gender"/>
            <datalist id="user-gender">
                <option value="Male">
                <option value="Female">
            </datalist>
        </div>

        <div class="form-group">
          <button class="btn btn-primary" type="submit">signup</button>
        </div>

      </form>
    </div>
  </div>  

</div>
<script src="js/login.js"></script>